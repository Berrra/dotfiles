#! /bin/sh

if xdo id -a "$PANEL_WM_NAME" > /dev/null ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc config top_padding $PANEL_HEIGHT
bspc subscribe report > "$PANEL_FIFO" &
xtitle -sf 'T%s' > "$PANEL_FIFO" &

# Clock
while true; do
	echo -e "S\uf017 $(date '+%H:%M')" > "$PANEL_FIFO" &
	sleep 5
done > "$PANEL_FIFO" &

# Volume
while true; do
	vol=$(amixer get Master | grep -oP "Left.*\d{2}%" | grep -oP "\d{2}%")
	echo -e "X\uf028 $vol"
	sleep 1
done > "$PANEL_FIFO" &

# Temp
while true; do
	cpu=$(sensors | grep -oP "Package.*?high" | grep -oP "\d{2}\.\d.C")
	gpu=$(nvidia-settings -q gpucoretemp | grep -oP "\(jdesk:0\.0\): \d{2}" | grep -oP "\d{2}")
	echo -e "Y\uf21e $cpu | $gpu.0Â°C"
	sleep 5
done > "$PANEL_FIFO" &

# Btc price
while true; do
	foo=$(curl -s https://www.bitstamp.net/api/v2/ticker/btcusd/)
	bid=$(echo "$foo" | grep -oP "\"bid\": \"\d{1,9}\.\d{2}" | grep -oP "\d{1,9}\.\d{2}")
	ask=$(echo "$foo" | grep -oP "\"ask\": \"\d{1,9}\.\d{2}" | grep -oP "\d{1,9}\.\d{2}")
	echo -e "Z\uf15a $bid | $ask"
	sleep 60
done > "$PANEL_FIFO" &

# Pacman updates
while true; do
	pac=$(pacman -Qu | wc -l)
	echo -e "J\uf148 $pac"
	sleep 300
done > "$PANEL_FIFO" &

. panel_colors

panel_bar < "$PANEL_FIFO" | lemonbar -a 32 -n "$PANEL_WM_NAME" -g x$PANEL_HEIGHT -o 1 -f "$PANEL_FONT" -o 0 -f "$PANEL_FONT2" -F "$COLOR_DEFAULT_FG" -B "$COLOR_DEFAULT_BG" | sh &

wid=$(xdo id -a "$PANEL_WM_NAME")
tries_left=20
while [ -z "$wid" -a "$tries_left" -gt 0 ] ; do
	sleep 0.05
	wid=$(xdo id -a "$PANEL_WM_NAME")
	tries_left=$((tries_left - 1))
done
[ -n "$wid" ] && xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" "$wid"

wait
